<!doctype html>
<html>

<head>
    <title>Audit Log - Bertie's Books</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>

<body>

    <h1>Audit Log</h1>

    <table>
        <tr>
            <th>Username</th>
            <th>Success</th>
            <th>Timestamp</th>
        </tr>

        <% logs.forEach(function(entry) { %>
            <tr>
                <td>
                    <%= entry.username %>
                </td>
                <td>
                    <%= entry.success===1 ? "Success" : "Fail" %>
                </td>
                <td>
                    <%= entry.timestamp %>
                </td>
            </tr>
            <% }) %>
    </table>

</body>

</html>